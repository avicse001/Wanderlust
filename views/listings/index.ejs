<style>
    .filter-bar {
        display: flex;
        align-items: center;
        gap: 1rem;
        overflow-x: auto;
        padding: 0.5rem 1rem;
        scrollbar-width: none;
        -ms-overflow-style: none;
        background: white;
        border-bottom: 1px solid #ddd;
        flex-wrap: nowrap; /* Default: stay inline */
    }
    .filter-bar::-webkit-scrollbar {
        display: none;
    }
    .filter {
        text-align: center;
        flex: 0 0 auto;
        font-size: 0.85rem;
        color: #444;
        opacity: 0.7;
        min-width: 70px;
    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }
    .filter i {
        font-size: 1.3rem;
        margin-bottom: 0.25rem;
    }
    .arrow-btn {
        border: 1px solid #ccc;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
        cursor: pointer;
        flex: 0 0 auto;
    }
    .filter-btn {
        border: 1px solid #ccc;
        border-radius: 1rem;
        padding: 0.5rem 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        background: white;
        flex: 0 0 auto;
    }
    .tax-toggle {
        border: 1px solid #ccc;
        border-radius: 2rem;
        padding: 0.5rem 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: white;
        flex: 0 0 auto;
    }
    .tax-info {
        display: none;
    }

    /* Mobile: wrap filters and controls */
    @media (max-width: 768px) {
        .filter-bar {
            flex-wrap: wrap;
        }
        #filters {
            order: 1;
            flex: 1 1 100%;
            overflow-x: auto;
            display: flex;
            gap: 1rem;
        }
        .filter-btn,
        .tax-toggle {
            order: 2;
            flex: 1 1 auto;
        }
        .arrow-btn {
            display: none;
        }
    }
</style>



<div class="filter-bar">
    <div class="arrow-btn" onclick="scrollFilters(-200)">
        <i class="fa-solid fa-chevron-left"></i>
    </div>

    <div id="filters" style="display:flex;gap:2rem;overflow-x:auto;scroll-behavior:smooth;">
        <div class="filter"><i class="fa-solid fa-mug-hot"></i><p>Bed & breakfasts</p></div>
        <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
        <div class="filter"><i class="fa-solid fa-chess-rook"></i><p>Castles</p></div>
        <div class="filter"><i class="fa-solid fa-flag"></i><p>Top of the world</p></div>
        <div class="filter"><i class="fa-solid fa-snowflake"></i><p>Arctic</p></div>
        <div class="filter"><i class="fa-solid fa-wine-glass"></i><p>Vineyards</p></div>
        <div class="filter"><i class="fa-solid fa-circle"></i><p>Domes</p></div>
        <div class="filter"><i class="fa-solid fa-building"></i><p>Design</p></div>
        <div class="filter"><i class="fa-solid fa-tent"></i><p>A-frames</p></div>
    </div>

    <div class="arrow-btn" onclick="scrollFilters(200)">
        <i class="fa-solid fa-chevron-right"></i>
    </div>

    <div class="filter-btn">
        <i class="fa-solid fa-sliders"></i> Filters
    </div>

    <div class="tax-toggle">
        <span>Display total before taxes</span>
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
    </div>
</div>

<% if (typeof query !== "undefined") { %>
  <h5>Search results for "<%= query %>":</h5>
<% } %>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 mt-3">
  <% if (allListings.length === 0) { %>
    <p>No listings found.</p>
  <% } %>
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col">
        <img src="<%= listing.image %>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
        <div class="card-img-overlay">Hot Sale</div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
            <i class="tax-info"> &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>


<script>
    const filters = document.getElementById("filters");
    function scrollFilters(amount) {
        filters.scrollBy({ left: amount, behavior: 'smooth' });
    }

    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("change", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            info.style.display = taxSwitch.checked ? "inline" : "none";
        }
    });
</script>
